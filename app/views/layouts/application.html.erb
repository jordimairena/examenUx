<!DOCTYPE html>
<html>
  <head>
    <title>Examen</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<p class="notice"><%= notice %></p>
     <p class="alert"><%= alert %></p>
     <header>
      <nav class="be-red white large-padding">
        <ul class="row center-xs" style="list-style-type: none">
          <li class="col-md">
            <%= link_to "Inicio",root_path %>
            <a href="Inicio"></a> 
            
          </li>
          <% if user_signed_in? %>
            <li class="col-md">
              <%= link_to "Cerrar Sesion", destroy_user_session_path, method: :delete  %>
            </li>
            <%else%>
            <li class="col-md">
              <%= link_to "Iniciar Sesion", new_user_session_path%>
            </li>
            <li class="col-md">
              <%= link_to "Crear Cuenta", new_user_registration_path  %>
            </li>
          <%end%>
        </ul>
      </nav>
</header>
    <%= yield %>
  </body>
</html>
